{
  "name": "cql",
  "version": "0.7.1",
  "displayName": "Clinical Quality Language (CQL)",
  "description": "Syntax highlighting, linting, and execution for the HL7 Clinical Quality Language (CQL) for VS Code",
  "publisher": "cqframework",
  "license": "Apache-2.0",
  "author": "Alphora",
  "bugs": "https://github.com/cqframework/vscode-cql/issues",
  "keywords": [
    "cqframework",
    "clinical quality language",
    "cql",
    "fhir",
    "hl7"
  ],
  "icon": "icons/cqframework.png",
  "preview": true,
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false
    },
    "virtualWorkspaces": false
  },
  "engines": {
    "vscode": ">=1.75.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cqframework/vscode-cql"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters",
    "Snippets"
  ],
  "main": "./dist/extension",
  "contributes": {
    "languages": [
      {
        "id": "cql",
        "extensions": [
          ".cql"
        ],
        "configuration": "./language-configuration.json",
        "aliases": [
          "CQL",
          "Cql"
        ]
      }
    ],
    "snippets": [
      {
        "language": "cql",
        "path": "./snippets.json"
      }
    ],
    "grammars": [
      {
        "language": "cql",
        "scopeName": "source.cql",
        "path": "./syntaxes/cql.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "CQL"
    },
    "commands": [
      {
        "command": "cql.open.serverLog",
        "title": "Open Server Logs",
        "category": "CQL"
      },
      {
        "command": "cql.open.clientLog",
        "title": "Open Client Logs",
        "category": "CQL"
      },
      {
        "command": "cql.open.logs",
        "title": "Open Logs",
        "category": "CQL"
      },
      {
        "command": "cql.action.viewElm",
        "title": "View ELM",
        "category": "CQL"
      },
      {
        "command": "cql.action.executeCqlFile",
        "title": "Execute CQL File",
        "category": "CQL"
      },
      {
        "command": "cql.action.executeCqlExpression",
        "title": "Execute CQL Expression",
        "category": "CQL"
      },
      {
        "command": "cql.connections.clearConnections",
        "title": "Clear Connections",
        "category": "connections"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "connection-manager",
          "title": "Connection Manager",
          "icon": "$(database)"
        }
      ]
    },
    "views": {
      "connection-manager": [
        {
          "id": "connectionManager.connectionsView",
          "type": "webview",
          "name": "Manage FHIR Connections"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "cql.action.executeCqlExpression",
          "when": "(editorLangId == cql) && editorTextFocus",
          "group": "1_cqlactions"
        },
        {
          "command": "cql.action.executeCqlFile",
          "when": "editorLangId == cql",
          "group": "1_cqlactions"
        },
        {
          "command": "cql.action.viewElm",
          "when": "editorLangId == cql",
          "group": "1_cqlactions"
        }
      ],
      "view/title": [
        {
          "command": "cql.connections.clearConnections",
          "group": "navigation",
          "when": "view == connectionManager.connectionsView"
        }
      ]
    }
  },
  "resolutions": {
    "color-name": "1.1.3"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "vscode-test"
  },
  "javaDependencies": {
    "cql-language-server": {
      "groupId": "org.opencds.cqf.cql.ls",
      "artifactId": "cql-ls-service",
      "version": "3.1.0"
    }
  },
  "devDependencies": {
    "@types/expand-tilde": "^2.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.1.1",
    "@types/lodash": "^4.14.183",
    "@types/mocha": "^10.0.1",
    "@types/node": "^22.2.0",
    "@types/node-fetch": "^2.6.2",
    "@types/vscode": "^1.73.0",
    "@types/winreg": "^1.2.31",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.6",
    "mocha": "^10.2.0",
    "prettier": "^3.3.3",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@types/vscode-webview": "^1.57.5",
    "@types/web": "^0.0.154",
    "expand-tilde": "^2.0.2",
    "find-java-home": "1.2.2",
    "fs-extra": "^8.1.0",
    "glob": "^7.2.3",
    "lodash": "^4.17.21",
    "node-fetch": "2.6.7",
    "tslib": "^2.4.0",
    "vscode-languageclient": "^7.0.0",
    "vscode-uri": "^3.0.8",
    "winreg": "^1.2.4",
    "winston": "^3.8.1",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "tabWidth": 2,
    "arrowParens": "avoid"
  }
}
